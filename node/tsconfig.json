{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "src",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "**/*.spec.ts"
  ]
}